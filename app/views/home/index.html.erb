<br>

<div class="row">
  <% @courses.each do |course| %>

  <div class="col s5 offset-s1 card">
    <a href="/solve/course/<%= course.id %>">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" style="width: 100%" src="../course<%=course.id%>.jpg">
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4"><%= course.title %></span>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
        <p>Let's solve some math problems!</p>
      </div>
    </a>
  </div>

  <% end%>
</div>
